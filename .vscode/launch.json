{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: autogenlang.py",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/tools",
            "program": "autogenlang.py",
            "console": "integratedTerminal",
            "args": ["build",
                     "-o",
                     "../output",
                     "--owner",
                     "\"Randal Eike\"",
                     "--eula",
                     "MIT_open"
                    ]
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            //========================================================
            // Locallanguage select debug launch
            //========================================================
            "name": "LocalLanguageSelect_Linux_test unittest (gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/output/LocalLanguageSelect_Linux_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/output",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}